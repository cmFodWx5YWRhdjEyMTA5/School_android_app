<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_margin="@dimen/space_small"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_normal">

        <ImageView
            android:id="@+id/imgStudent"
            android:src="@drawable/girl"
            android:padding="@dimen/space_normal"
            android:layout_width="@dimen/student_image"
            android:layout_height="@dimen/student_image" />

        <TextView
            android:id="@+id/tvTemperature"
            android:text="37.8 C"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/red_btn_bg_pressed_color"
            android:textSize="@dimen/text_large"
            android:layout_width="@dimen/size_image"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvName"
            android:text="Student Name"
            android:textSize="@dimen/text_large"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toStartOf="@id/tvTemperature"
            android:layout_marginStart="@dimen/space_normal"
            android:layout_toEndOf="@id/imgStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_marginStart="8dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="0dp"
            android:layout_toStartOf="@id/tvTemperature"
            android:layout_toEndOf="@id/imgStudent"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Class"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_title" />

        <TextView
            android:id="@+id/tvDate"
            android:text="Date"
            android:layout_below="@id/tvClass"
            android:textColor="@color/colorPrimary"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toStartOf="@id/tvTemperature"
            android:layout_marginTop="@dimen/space_normal"
            android:textSize="@dimen/text_title"
            android:layout_marginStart="@dimen/space_normal"
            android:layout_toEndOf="@id/imgStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </RelativeLayout>




</androidx.cardview.widget.CardView>

