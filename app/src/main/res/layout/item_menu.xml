<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/viewParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/option_width"
    android:layout_height="@dimen/option_height"
    app:cardUseCompatPadding="true"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/blue_trans"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="@dimen/option_icon"
            android:layout_height="@dimen/option_icon"
            android:src="@drawable/img_hot"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_small"
            android:text="CHECK TEMPERATURE"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/text_head"
            android:textColor="@color/white"/>

    </LinearLayout>





</androidx.cardview.widget.CardView>
